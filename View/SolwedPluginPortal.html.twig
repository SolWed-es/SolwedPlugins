{% extends "Master/MenuBghTemplate.html.twig" %}

{% block bodyHeaderOptions %}
    {{ parent() }}
    <div class="container-fluid mb-2">
        <div class="row">
            <div class="col-sm-6">
                <div class="btn-group">
                    <a class="btn btn-sm btn-secondary" href="{{ fsc.url() }}" title="{{ trans('refresh') }}">
                        <i class="fas fa-redo" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
            <div class="col-sm text-right">
                <h1 class="h3">
                    {{ trans(fsc.getPageData()['title']) | capitalize }}
                    <i class="{{ fsc.getPageData()['icon'] }}" aria-hidden="true"></i>
                </h1>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container-fluid">
        <div class="card shadow">
            <div class="card-header">
                <h3 class="card-title">My Plugins Repository</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>{{ trans('name') }}</th>
                                <th>{{ trans('description') }}</th>
                                <th class="text-right">{{ trans('version') }}</th>
                                <th>{{ trans('status') }}</th>
                                <th class="text-right">{{ trans('actions') }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for plugin in fsc.pluginList %}
                                <tr>
                                    <td>{{ plugin.name }}</td>
                                    <td>{{ plugin.description }}</td>
                                    <td class="text-right">v{{ plugin.version }}</td>
                                    <td>
                                        {% if plugin.installed %}
                                            {% if plugin.update_available %}
                                                <span class="badge badge-warning">{{ trans('update-available') }}</span>
                                            {% else %}
                                                <span class="badge badge-success">{{ trans('installed') }}</span>
                                            {% endif %}
                                        {% else %}
                                            <span class="badge badge-secondary">{{ trans('not-installed') }}</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-right">
                                        {% if plugin.installed %}
                                            {% if plugin.update_available %}
                                                <a href="{{ fsc.url() }}?action=update&plugin={{ plugin.name }}&multireqtoken={{ formToken() }}" 
                                                   class="btn btn-sm btn-warning">
                                                    <i class="fas fa-sync-alt"></i> {{ trans('update') }}
                                                </a>
                                            {% else %}
                                                <button class="btn btn-sm btn-success" disabled>
                                                    <i class="fas fa-check"></i> {{ trans('installed') }}
                                                </button>
                                            {% endif %}
                                        {% else %}
                                            <a href="{{ fsc.url() }}?action=install&plugin={{ plugin.name }}&multireqtoken={{ formToken() }}" 
                                               class="btn btn-sm btn-primary">
                                                <i class="fas fa-download"></i> {{ trans('install') }}
                                            </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center">
                                        {{ trans('no-plugins-found') }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            // Add confirmation for install/update actions
            $('a[href*="action=install"], a[href*="action=update"]').on('click', function(e) {
                e.preventDefault();
                var url = $(this).attr('href');
                var action = $(this).text().trim();
                
                bootbox.confirm({
                    title: "{{ trans('confirm-action')|raw }}",
                    message: "{{ trans('are-you-sure-to')|raw }} " + action + "?",
                    closeButton: false,
                    buttons: {
                        cancel: {
                            label: "<i class='fas fa-times'></i> {{ trans('cancel') }}"
                        },
                        confirm: {
                            label: "<i class='fas fa-check'></i> " + action,
                            className: 'btn-primary'
                        }
                    },
                    callback: function(result) {
                        if (result) {
                            animateSpinner('add');
                            window.location = url;
                        }
                    }
                });
            });
        });
    </script>
{% endblock %}